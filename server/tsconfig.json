{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "experimentalDecorators": true,
        "target": "ES2020",
        "sourceMap": true,
        "outDir": "dist",
        "emitDecoratorMetadata": true,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true    
    },
    "include": ["src/**/*", "types"],
}